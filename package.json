{
  "name": "woler-gui",
  "version": "1.0.0",
  "description": "Wake-on-LAN GUI with React and BlueprintJS",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder"
  },
  "dependencies": {
    "@blueprintjs/core": "^5.0.0",
    "@blueprintjs/icons": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wake_on_lan": "^1.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "vite": "^7.0.6",
    "concurrently": "^8.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.0",
    "electron-is-dev": "^2.0.0",
    "csv-parser": "^3.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.woler.gui",
    "productName": "Woler GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  }
} 